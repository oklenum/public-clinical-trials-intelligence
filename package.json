{
  "name": "public-clinical-trials-intelligence",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run -s mcp:server",
    "mcp:server": "npm run -s build && node dist/src/mcp/server.js",
    "mcp:server:http": "npm run -s build && MCP_TRANSPORT=streamable-http node dist/src/mcp/server.js",
    "smoke:mcp": "npm run -s build && node dist/scripts/smoke_mcp_server.js",
    "smoke:mcp:http": "npm run -s build && node dist/scripts/smoke_mcp_http.js",
    "smoke:ctgov": "npm run -s build && node dist/scripts/smoke_clinicaltrials_gov.js",
    "test": "npm run -s build && node --test dist/scripts/tests/*.test.js"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
